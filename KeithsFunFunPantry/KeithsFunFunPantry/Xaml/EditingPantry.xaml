<Page x:Class="KeithsFunFunPantry.EditingPantry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeithsFunFunPantry"
      xmlns:AC="clr-namespace:KeithsFunFunPantry.AppControls"
      mc:Ignorable="d" 
      d:DesignHeight="621" d:DesignWidth="1242"      
      Title="EditingPantry">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="95"/>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>

        </Grid.RowDefinitions>
        <Border Grid.Row="1" 
                Grid.Column="1" 
                Grid.ColumnSpan="4" 
                Padding="5" 
                CornerRadius="15" 
                BorderThickness="2" 
                BorderBrush="LightGray" 
                UseLayoutRounding='True' 
                Background="White">
            <TextBox x:Name="TextBox_IngredientSearch" 
                     Background="Transparent" 
                     BorderThickness="0"
                     FontFamily="Georgia"
                     Margin="28,0,0,0"/>
        </Border>
        <Label VerticalAlignment="Center" 
               HorizontalAlignment="Left"
               Background="Transparent"
               Margin="3,1,0,0"
               Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="2">
            <Image Source="../Images/Search.png"/>
        </Label>
        <Button Background="Transparent"
                Grid.Column="1"
                Grid.Row="1"
                BorderThickness="0"
                Opacity=".2"
                OpacityMask="Transparent"
                Width="20"
                Height="20"
                Margin="7,6,0,5"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                FontFamily ="Georgia"
                Click="Button_Click"/>
        <Label Content="Edit Pantry" 
               FontSize="30" 
               FontFamily="Georgia"
               Grid.ColumnSpan="5"
               Margin="60,0,0,0" 
               VerticalAlignment="Top"
               HorizontalAlignment="Left"/>
        <Button Content="Save Pantry" 
                Grid.Column="6" 
                FontFamily="Georgia"
                Width="70" 
                Margin="0,20,60,0" 
                Height="25" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right"/>
        <Label Content="Add Ingredient:" 
               Grid.Row="3" 
               Grid.RowSpan="2"
               Grid.ColumnSpan="3" 
               Margin="15,5"
               VerticalAlignment="Top"
               FontSize="15"
               FontFamily="Georgia"
               FontWeight="Bold"/>
        <TextBox x:Name="TextBox_Amount" 
                 Grid.Row="5" 
                 Grid.Column="1" 
                 Grid.ColumnSpan="3" 
                 Padding="5" 
                 BorderThickness="3" 
                 BorderBrush="#7EB4EA"/>
        <TextBox x:Name="TextBox_Name" 
                 Grid.Row="7" 
                 Grid.Column="1" 
                 Grid.ColumnSpan="3" 
                 Padding="5" 
                 BorderThickness="3" 
                 BorderBrush="Black"/>
        <Button Content="Add" 
                Grid.Row="8" 
                Grid.RowSpan="2" 
                Grid.Column="2" 
                Grid.ColumnSpan="2" 
                Width="50" 
                Height="25" 
                Margin="5,10,15,0" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Right"
                Click="Button_Click_1"/>
        <Label Content="Pantry Items"
               Grid.Row="2"
               Grid.RowSpan="2"
               Grid.Column="4"
               FontFamily="Georgia"
               Grid.ColumnSpan="3"
               VerticalAlignment="Center"
               HorizontalAlignment="Center"
               FontSize="20"
               FontWeight="Bold"/>
        <ScrollViewer Background="#E5C698"
                      Opacity=".7"
                      Grid.Row="4" 
                      Grid.RowSpan="9" 
                      Grid.Column="4" 
                      Grid.ColumnSpan="3"
                      Margin="20,0,20,10">
            <StackPanel x:Name="StackPanel_EditPantry"
                        Margin="20">
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
