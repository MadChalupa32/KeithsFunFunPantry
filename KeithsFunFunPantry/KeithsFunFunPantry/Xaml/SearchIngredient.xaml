<Page x:Class="KeithsFunFunPantry.SearchIngredient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KeithsFunFunPantry"
      xmlns:AC="clr-namespace:KeithsFunFunPantry.AppControls"
      mc:Ignorable="d" 
      d:DesignHeight="621" d:DesignWidth="1242"
      Title="SearchIngredient">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="123.2"/>
            <ColumnDefinition Width="344*"/>
            <ColumnDefinition Width="347*"/>
            <ColumnDefinition Width="347*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="30"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" 
                Grid.Column="1" 
                Grid.ColumnSpan="3" 
                Padding="5" 
                CornerRadius="15" 
                BorderThickness="2" 
                BorderBrush="LightGray" 
                UseLayoutRounding='True' 
                Background="White" Margin="0.4,0,0.2,0.4">
            <TextBox x:Name="TextBox_ByIngredientSearch" 
                     Background="Transparent" 
                     BorderThickness="0"
                     FontFamily="Georgia"
                     Margin="28,0,0,0"/>
        </Border>
        <Label VerticalAlignment="Center" 
               HorizontalAlignment="Left"
               Background="Transparent"
               Margin="3.4,1,0,0.4"
               Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="2" Height="29" Width="28">
            <Image Source="../Images/Search.png"/>
        </Label>
        <Button Background="Transparent"
                Grid.Column="1"
                Grid.Row="1"
                BorderThickness="0"
                Opacity=".2"
                OpacityMask="Transparent"
                Width="20"
                Height="20"
                Margin="7.4,6,0,4.4"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Click="IngredientSearchButton_ClickHandler"/>
        <Label Content="Search by Ingredients" FontFamily="Georgia" FontSize="30" Grid.ColumnSpan="3" Margin="10.4,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Column="1" Height="45" Width="299"/>
        <CheckBox Content="Only include chosen ingredients:" FontFamily="Georgia" Grid.Row="3" Grid.ColumnSpan="3" Margin="6,2.6,0.2,2.4"/>
        <CheckBox Content="Chicken" FontFamily="Georgia" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="5.4,1.6,4.2,2.4"/>
        <CheckBox Content="Beef" FontFamily="Georgia" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="5.4,1.6,4.2,2.4"/>
        <CheckBox Content="Pork" FontFamily="Georgia" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="5.4,1.6,4.2,2.4"/>
        <CheckBox Content="Rice" FontFamily="Georgia" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Margin="5.4,1.6,4.2,2.4"/>
        <Label Content="Recipes"
               Grid.Row="1"
               Grid.RowSpan="3"
               Grid.Column="4"
               FontFamily="Georgia"
               FontSize="20"
               FontWeight="Bold"
               VerticalAlignment="Top"
               HorizontalAlignment="Center" Height="32" Margin="128.8,30,128.4,0" Width="90"/>
        <ScrollViewer Background="#E5C698"
                      Opacity=".7"
                      Grid.Row="3"
                      Grid.RowSpan="8"
                      Grid.Column="3"
                      Grid.ColumnSpan="3"
                      Margin="20.8,19.6,19.6,19.8">
            <StackPanel x:Name="StackPanel_SearchIngredients"
                        Margin="20">
                <AC:SearchIngredientItem/>
                <AC:SearchIngredientItem/>
                <AC:SearchIngredientItem/>
                <AC:SearchIngredientItem/>
                <AC:SearchIngredientItem/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
