<UserControl x:Class="KeithsFunFunPantry.AppControls.ViewAndEditRecipe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeithsFunFunPantry.AppControls"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="300">
    <StackPanel>

        <Label x:Name="Header"
               Content="Please select relevant ingrediants below then fill in the text boxes."
               />
        <ListBox x:Name="IngredientDisplayer"
                 SelectionMode="Multiple"
                 Height="150"/>

        <TextBox x:Name="TitleEntryTB"
                 Grid.Row="1"/>

        <TextBox x:Name="DirectionsEntryTB"
                 Grid.Row="2"
                 Height="60"/>

        <TextBox x:Name="NotesEntryTB"
                 Grid.Row="3"
                 Height="40"/>

        <Button x:Name="SaveButton"
                Content="Save Recipe"
                Margin="10"
                Width="100"
                Click="SaveButton_Click"/>
    </StackPanel>


</UserControl>
