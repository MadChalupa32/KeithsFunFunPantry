<UserControl x:Class="KeithsFunFunPantry.AppControls.AddRecipeIngredientList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeithsFunFunPantry.AppControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <WrapPanel>
        <CheckBox x:Name="SelectedCB"
                  VerticalAlignment="Center"/>
        <Label x:Name="RecipeTitleLabel"
               Background="Green"
               Content="{Binding Path=Name, Mode=OneWay}"/>
    </WrapPanel>
</UserControl>
