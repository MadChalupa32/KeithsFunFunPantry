<UserControl x:Class="KeithsFunFunPantry.AppControls.AddRecipeWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeithsFunFunPantry.AppControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="IngredientDisplayer"/>
        <TextBox x:Name="TitleEntryTB"
                 Grid.Row="1"/>
        <TextBox x:Name="DescriptionEntryTB"
                 Grid.Row="2"/>
        <TextBox x:Name="NotesEntryTB"
                 Grid.Row="3"/>

    </Grid>
</UserControl>
